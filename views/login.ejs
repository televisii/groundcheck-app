<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - GC Pro</title>
    <style>
        :root { --primary: #2d3436; --accent: #0984e3; }
        body { 
            font-family: -apple-system, sans-serif; 
            background: #e9ecef; 
            display: flex; 
            justify-content: center; 
            align-items: center; 
            height: 100vh; 
            margin: 0; 
        }
        .login-card { 
            background: white; 
            padding: 30px; 
            border-radius: 20px; 
            box-shadow: 0 10px 25px rgba(0,0,0,0.1); 
            width: 100%; 
            max-width: 350px; 
        }
        h2 { margin-top: 0; color: var(--primary); text-align: center; margin-bottom: 25px; }
        .input-group { margin-bottom: 15px; }
        
        input { 
            width: 100%; 
            padding: 12px; 
            border: 1px solid #ddd; 
            border-radius: 8px; 
            box-sizing: border-box; 
            outline: none; 
            transition: 0.3s; 
        }
        input:focus { border-color: var(--accent); }
        
        /* MAGIC: Menghilangkan placeholder saat fokus */
        input:focus::placeholder {
            color: transparent;
        }

        .show-pw-container {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-top: -10px;
            margin-bottom: 15px;
            font-size: 13px;
            color: #636e72;
            cursor: pointer;
        }
        .show-pw-container input {
            width: auto;
            cursor: pointer;
        }

        button { 
            width: 100%; 
            padding: 12px; 
            background: var(--accent); 
            color: white; 
            border: none; 
            border-radius: 8px; 
            font-weight: bold; 
            cursor: pointer; 
        }
        button:active { transform: scale(0.98); }

        #error-msg {
            color: #d63031;
            background: #fff1f0;
            border: 1px solid #ffccc7;
            padding: 10px;
            border-radius: 8px;
            font-size: 13px;
            margin-bottom: 15px;
            display: none; /* Sembunyi jika tidak ada error */
            text-align: center;
        }
    </style>
</head>
<body>

<div class="login-card">
    <h2>GC Pro Login</h2>
    
    <div id="error-msg"></div>

    <form id="loginForm">
        <div class="input-group">
            <input type="email" id="email" placeholder="Email Petugas" required>
        </div>
        <div class="input-group">
            <input type="password" id="password" placeholder="********" required>
        </div>
        
        <label class="show-pw-container">
            <input type="checkbox" onclick="togglePassword()"> Tampilkan Password
        </label>

        <button type="submit">MASUK</button>
    </form>
</div>

<script>
    // Fungsi Show Password
    function togglePassword() {
        const x = document.getElementById("password");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }

    document.getElementById('loginForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;
        const errorDiv = document.getElementById('error-msg');

        // Reset error state
        errorDiv.style.display = 'none';

        try {
            const res = await fetch('/api/login', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email, password })
            });
            const data = await res.json();

            if (data.success) {
                window.location.href = '/';
            } else {
                // Tampilkan error di box merah
                errorDiv.innerText = data.message || 'Email atau Password salah';
                errorDiv.style.display = 'block';
            }
        } catch (err) {
            errorDiv.innerText = 'Terjadi kesalahan koneksi ke server';
            errorDiv.style.display = 'block';
        }
    });
</script>

</body>
</html>