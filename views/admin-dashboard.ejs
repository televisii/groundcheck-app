<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Admin - GC Pro</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background: #f4f7f6;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 1000px;
            margin: auto;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .btn-logout {
            background: #d63031;
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .card {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            text-align: center;
        }

        .card h3 {
            margin: 0;
            color: #636e72;
            font-size: 14px;
        }

        .card .number {
            font-size: 32px;
            font-weight: bold;
            color: #2d3436;
            margin: 10px 0;
        }

        .chart-container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            margin-bottom: 40px;
            position: relative;
            height: 500px;
            width: 100%;
            box-sizing: border-box;
        }

        .table-container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            width: 100%;
            box-sizing: border-box;
            overflow-x: hidden;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        th,
        td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }

        th {
            background: #f8f9fa;
            color: #2d3436;
        }

        /* CSS Mobile Table */
        .desktop-only {
            display: table-cell;
        }

        .mobile-email {
            display: none;
            font-size: 11px;
            color: #636e72;
            margin-top: 2px;
            font-style: italic;
        }

        .badge-total {
            background: #e6fffb;
            color: #00b894;
            padding: 5px 12px;
            border-radius: 15px;
            font-weight: bold;
            cursor: pointer;
            transition: 0.2s;
            display: inline-block;
            border: 1px solid transparent;
        }

        .badge-total:hover {
            background: #00b894;
            color: white;
            transform: scale(1.05);
            border-color: #00b894;
        }

        @media (max-width: 768px) {
            .table-container {
                overflow-x: auto;
            }

            .desktop-only {
                display: none;
            }

            .mobile-email {
                display: block;
            }

            .header {
                flex-direction: column;
                gap: 10px;
                text-align: center;
            }

            .toolbar {
                flex-direction: column;
                align-items: flex-start !important;
                gap: 10px;
            }

            .search-box {
                width: 100% !important;
            }

            .chart-container {
                height: 400px;
                padding: 10px;
                margin-bottom: 50px;
            }
        }

        .btn-export {
            background: #107c41;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-weight: bold;
        }

        .toolbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            flex-wrap: wrap;
            gap: 10px;
        }

        .search-box {
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 20px;
            width: 300px;
            outline: none;
            transition: 0.3s;
            background: #fff url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="%23999" viewBox="0 0 16 16"><path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/></svg>') no-repeat 95% center;
        }

        .search-box:focus {
            border-color: #0984e3;
            box-shadow: 0 0 5px rgba(9, 132, 227, 0.2);
        }

        .pagination {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
            align-items: center;
        }

        .page-link {
            text-decoration: none;
            padding: 8px 12px;
            border: 1px solid #ddd;
            background: white;
            color: #333;
            border-radius: 5px;
            cursor: pointer;
        }

        .page-link.disabled {
            background: #eee;
            color: #aaa;
            pointer-events: none;
        }

        .select-filter {
            padding: 8px;
            border-radius: 5px;
            border: 1px solid #ddd;
            background: white;
            font-family: inherit;
        }

        /* --CSS MODAL POPUP TOTAL VERIF PAGE ADMIN--  */

        .swal2-popup.custom-modal-radius {
            border-radius: 20px !important;
            padding-bottom: 25px !important;
        }

        /* Header Profil */
        .modal-profile-header {
            margin-bottom: 25px;
            text-align: center;
        }

        .modal-profile-name {
            font-size: 22px;
            font-weight: 700;
            color: #2d3436;
            margin-bottom: 5px;
            display: block;
        }

        .modal-profile-email {
            font-size: 13px;
            color: #636e72;
            font-weight: 500;
            background: #f1f2f6;
            padding: 4px 12px;
            border-radius: 15px;
            display: inline-block;
        }

        /* List Container */
        .modal-stat-list-container {
            background: #f8f9fa;
            border-radius: 16px;
            padding: 5px 20px;
            text-align: left;
            border: 1px solid #eee;
        }

        /* Item Baris */
        .modal-stat-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 14px 0;
            border-bottom: 1px solid #e9ecef;
        }

        .modal-stat-item:last-child {
            border-bottom: none;
        }

        /* Label & Dot */
        .stat-label-container {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .stat-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            display: inline-block;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .stat-name {
            font-size: 15px;
            font-weight: 600;
            color: #2d3436;
        }

        .stat-value {
            font-size: 18px;
            font-weight: 800;
            color: #2d3436;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <div>
                <h2 style="margin:0;">Dashboard Admin</h2>
                <small>Halo, <%= user.nama %></small>
            </div>
            <div>
                <a href="/logout" class="btn-logout">Logout</a>
            </div>
        </div>

        <div class="stats-grid">
            <div class="card">
                <h3>Total Target Usaha</h3>
                <div class="number" id="stats-total">
                    <%= stats.total %>
                </div>
            </div>
            <div class="card">
                <h3>Sudah Diverifikasi</h3>
                <div class="number" style="color: #00b894;">
                    <%= stats.verified %>
                </div>
            </div>
            <div class="card">
                <h3>Belum Diverifikasi</h3>
                <div class="number" style="color: #d63031;">
                    <%= stats.pending %>
                </div>
            </div>
            <div class="card">
                <h3>Progress</h3>
                <div class="number">
                    <%= stats.total> 0 ? Math.round((stats.verified / stats.total) * 100) : 0 %>%
                </div>
            </div>
        </div>

        <div style="margin-bottom: 20px; text-align: right;">
            <a href="/admin/export" class="btn-export">
                <span>ðŸ“Š Export Data </span>
            </a>
        </div>

        <div class="chart-container">
            <div
                style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px; flex-wrap: wrap; gap: 10px;">
                <h3 style="margin:0;">ðŸ“ˆ Grafik Progress Kumulatif</h3>
                <div>
                    <select id="filterMonth" class="select-filter" onchange="debounceSearch()">
                        <% const monthNames=["Januari", "Februari" , "Maret" , "April" , "Mei" , "Juni" , "Juli"
                            , "Agustus" , "September" , "Oktober" , "November" , "Desember" ]; %>
                            <% for(let i=0; i<12; i++) { %>
                                <option value="<%= i+1 %>" <%=filter.month==(i+1) ? 'selected' : '' %>>
                                    <%= monthNames[i] %>
                                </option>
                                <% } %>
                    </select>
                    <select id="filterYear" class="select-filter" onchange="debounceSearch()">
                        <% const currYear=new Date().getFullYear(); %>
                            <% for (let i=currYear + 3; i>= currYear - 2; i--) { %>
                                <option value="<%= i %>" <%=filter.year==i ? 'selected' : '' %>>
                                    <%= i %>
                                </option>
                                <% } %>
                    </select>
                </div>
            </div>
            <div style="position: relative; height: 100%; width: 100%;">
                <canvas id="verificationChart"></canvas>
            </div>
        </div>

        <div class="table-container">
            <div class="toolbar">
                <h3 style="margin:0;">ðŸ“‹ Kinerja Petugas</h3>
                <input type="text" id="searchInput" class="search-box" placeholder="Ketik nama petugas..."
                    value="<%= pagination.search %>" oninput="debounceSearch()">
            </div>

            <table>
                <thead>
                    <tr>
                        <th width="40">No</th>
                        <th>Nama Petugas</th>
                        <th class="desktop-only">Email</th>
                        <th style="text-align: center;">Total Verifikasi</th>
                    </tr>
                </thead>
                <tbody id="tbody-petugas">
                    <% if(leaderboard.length===0) { %>
                        <tr>
                            <td colspan="4" style="text-align:center; padding: 20px;">Tidak ada data ditemukan.</td>
                        </tr>
                        <% } %>

                            <% leaderboard.forEach((row, index)=> { %>
                                <tr>
                                    <td>
                                        <%= ((pagination.page - 1) * 10) + (index + 1) %>
                                    </td>
                                    <td>
                                        <b>
                                            <%= row.petugas_nama %>
                                        </b>
                                        <div class="mobile-email">
                                            <%= row.petugas_email %>
                                        </div>
                                    </td>
                                    <td class="desktop-only">
                                        <%= row.petugas_email %>
                                    </td>
                                    <td style="text-align: center;">
                                        <span class="badge-total"
                                            onclick="showStatDetail('<%= row.petugas_email %>', '<%= row.petugas_nama %>')">
                                            <%= row.total_kerja %>
                                        </span>
                                    </td>
                                </tr>
                                <% }); %>
                </tbody>
            </table>

            <div class="pagination" id="pagination-container">
                <% if(pagination.totalPages> 1) { %>
                    <a href="javascript:void(0)" onclick="fetchData('<%= pagination.page - 1 %>')"
                        class="page-link <%= pagination.page === 1 ? 'disabled' : '' %>">Prev</a>

                    <span class="page-info" style="margin: 0 15px; font-weight: 600; color: #636e72;">Halaman <b>
                            <%= pagination.page %>
                        </b> dari <%= pagination.totalPages %></span>

                    <a href="javascript:void(0)" onclick="fetchData('<%= pagination.page + 1 %>')"
                        class="page-link <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">Next</a>
                    <% } %>
            </div>
        </div>
    </div>

    <script>
        let searchTimeout = null;
        let myChart = null;

        // --- INIT DATA ---
        let initialData = [];
        let initialTotalLampau = 0;

        try {
            initialData = JSON.parse('<%- JSON.stringify(chartData || []) %>');
            initialTotalLampau = parseInt('<%= typeof totalLampau !== "undefined" ? totalLampau : 0 %>');
        } catch (e) {
            console.error("Gagal parsing data awal:", e);
        }

        renderChart(initialData, initialTotalLampau);

        function debounceSearch() {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                fetchData(1);
            }, 500);
        }

        async function fetchData(page) {
            const query = document.getElementById('searchInput').value;
            const month = document.getElementById('filterMonth').value;
            const year = document.getElementById('filterYear').value;

            const newUrl = `/admin/dashboard?page=${page}&search=${query}&month=${month}&year=${year}`;
            window.history.pushState({ path: newUrl }, '', newUrl);

            try {
                const res = await fetch(newUrl + '&ajax=true');
                if (!res.ok) throw new Error("Gagal fetch data");
                const data = await res.json();
                renderTable(data);
                renderChart(data.chartData, data.totalLampau);
            } catch (err) {
                console.error("Error mengambil data:", err);
            }
        }

        function renderTable(data) {
            const tbody = document.getElementById('tbody-petugas');
            const pagiContainer = document.getElementById('pagination-container');
            const list = data.leaderboard;
            const pagi = data.pagination;

            let html = '';
            if (!list || list.length === 0) {
                html = '<tr><td colspan="4" style="text-align:center; padding: 20px;">Tidak ada data ditemukan.</td></tr>';
            } else {
                list.forEach((row, index) => {
                    const no = ((pagi.page - 1) * 10) + (index + 1);
                    html += `
                        <tr>
                            <td>${no}</td>
                            <td>
                                <b>${row.petugas_nama}</b>
                                <div class="mobile-email">${row.petugas_email}</div>
                            </td>
                            <td class="desktop-only">${row.petugas_email}</td>
                            <td style="text-align: center;">
                                <span class="badge-total" onclick="showStatDetail('${row.petugas_email}', '${row.petugas_nama}')">
                                    ${row.total_kerja}
                                </span>
                            </td>
                        </tr>
                    `;
                });
            }
            tbody.innerHTML = html;

            let pagiHtml = '';
            if (pagi.totalPages > 1) {
                const prevDisabled = pagi.page === 1 ? 'disabled' : '';
                pagiHtml += `<a href="javascript:void(0)" onclick='fetchData(${pagi.page - 1})' class="page-link ${prevDisabled}">Prev</a>`;
                pagiHtml += `<span class="page-info" style="margin: 0 10px;">Halaman <b>${pagi.page}</b> dari ${pagi.totalPages}</span>`;
                const nextDisabled = pagi.page === pagi.totalPages ? 'disabled' : '';
                pagiHtml += `<a href="javascript:void(0)" onclick='fetchData(${pagi.page + 1})' class="page-link ${nextDisabled}">Next</a>`;
            }
            pagiContainer.innerHTML = pagiHtml;
        }

        // --- [UPDATE: TAMPILAN POPUP DETAIL VERIF] ---
        async function showStatDetail(email, nama) {
            Swal.fire({
                title: '',
                html: '<div style="padding:20px;">Memuat data...</div>',
                allowOutsideClick: false,
                showConfirmButton: false,
                customClass: { popup: 'custom-modal-radius' },
                didOpen: () => { Swal.showLoading(); }
            });

            try {
                const res = await fetch(`/api/stats-detail?email=${encodeURIComponent(email)}`);
                if (!res.ok) throw new Error("Gagal mengambil data");

                const data = await res.json();

                // 1. Header Profil
                let headerHtml = `
                    <div class="modal-profile-header">
                        <span class="modal-profile-name">${nama}</span>
                        <span class="modal-profile-email">${email}</span>
                    </div>
                `;

                // 2. List Statistik
                let contentHtml = `<div class="modal-stat-list-container">`;

                if (data.length === 0) {
                    contentHtml += `<div style="text-align:center; color:#a4b0be; padding:20px; font-style:italic;">Belum ada data detail.</div>`;
                } else {
                    const colors = {
                        'Aktif': '#00b894',
                        'Tidak Ditemukan': '#636e72',
                        'Tutup': '#d63031',
                        'Ganda': '#e17055',
                        'Baru': '#0984e3'
                    };

                    data.forEach(item => {
                        const color = colors[item.status_usaha] || '#2d3436';
                        contentHtml += `
                            <div class="modal-stat-item">
                                <div class="stat-label-container">
                                    <span class="stat-dot" style="background-color: ${color};"></span>
                                    <span class="stat-name">${item.status_usaha}</span>
                                </div>
                                <span class="stat-value">${item.jumlah}</span>
                            </div>
                        `;
                    });
                }
                contentHtml += `</div>`;

                // 3. Tampilkan Popup 
                Swal.fire({
                    title: '',
                    html: headerHtml + contentHtml,
                    confirmButtonText: 'Tutup',
                    confirmButtonColor: '#2d3436',
                    customClass: { popup: 'custom-modal-radius' },
                    buttonsStyling: false,
                    didOpen: () => {

                        const btn = Swal.getConfirmButton();
                        btn.style.backgroundColor = '#2d3436';
                        btn.style.color = '#fff';
                        btn.style.borderRadius = '12px';
                        btn.style.padding = '10px 30px';
                        btn.style.marginTop = '20px';
                        btn.style.fontWeight = 'bold';
                        btn.style.boxShadow = '0 4px 6px rgba(0,0,0,0.1)';
                    }
                });

            } catch (err) {
                console.error(err);
                Swal.fire({ icon: 'error', title: 'Error', text: 'Gagal memuat data.' });
            }
        }

        function renderChart(data, startTotal) {
            const ctxCanvas = document.getElementById('verificationChart');
            if (!ctxCanvas) return;
            const ctx = ctxCanvas.getContext('2d');

            const totalTargetText = document.getElementById('stats-total').innerText;
            const totalTarget = parseInt(totalTargetText) || 1;

            let cumulativeSum = startTotal || 0;
            let labels = [];
            let percentages = [];

            if (data && data.length > 0) {
                data.forEach(d => {
                    const date = new Date(d.tanggal);
                    labels.push(date.getDate());
                    cumulativeSum += parseInt(d.jumlah);
                    const percentage = (cumulativeSum / totalTarget) * 100;
                    percentages.push(percentage);
                });
            } else {
                labels = ["Tidak ada aktifitas bulan ini"];
                const lastPercentage = (cumulativeSum / totalTarget) * 100;
                percentages = [lastPercentage];
            }

            if (myChart) myChart.destroy();

            myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Progress Kumulatif (%)',
                        data: percentages,
                        borderColor: '#0984e3',
                        backgroundColor: 'rgba(9, 132, 227, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.3,
                        pointRadius: 4,
                        pointBackgroundColor: '#fff',
                        pointBorderColor: '#0984e3'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    layout: { padding: { left: 10, right: 20, top: 20, bottom: 50 } },
                    plugins: {
                        legend: { display: false },
                        tooltip: { callbacks: { label: function (context) { return `Total Progress: ${context.parsed.y.toFixed(4)}%`; } } }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: { display: true, text: 'Persentase Kumulatif (%)', color: '#636e72', font: { size: 12, weight: 'bold' } },
                            ticks: { callback: function (value) { return value + '%'; }, padding: 10 },
                            grid: { borderDash: [2, 4] }
                        },
                        x: {
                            title: { display: true, text: 'Tanggal', color: '#636e72', font: { size: 12, weight: 'bold' }, padding: { top: 10 } },
                            grid: { display: false },
                            ticks: { padding: 10 }
                        }
                    }
                }
            });
        }
    </script>
</body>

</html>