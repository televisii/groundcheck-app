<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Admin - GC Pro</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background: #f4f7f6;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 1000px;
            margin: auto;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .btn-logout {
            background: #d63031;
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .card {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            text-align: center;
        }

        .card h3 {
            margin: 0;
            color: #636e72;
            font-size: 14px;
        }

        .card .number {
            font-size: 32px;
            font-weight: bold;
            color: #2d3436;
            margin: 10px 0;
        }

        .table-container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        th,
        td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        th {
            background: #f8f9fa;
            color: #2d3436;
        }

        .btn-export {
            background: #107c41;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-weight: bold;
        }

        /* Search Bar Baru */
        .toolbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            flex-wrap: wrap;
            gap: 10px;
        }

        .search-box {
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 20px;
            width: 300px;
            outline: none;
            transition: 0.3s;
            background: #fff url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="%23999" viewBox="0 0 16 16"><path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/></svg>') no-repeat 95% center;
        }

        .search-box:focus {
            border-color: #0984e3;
            box-shadow: 0 0 5px rgba(9, 132, 227, 0.2);
        }

        .pagination {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
            align-items: center;
        }

        .page-link {
            text-decoration: none;
            padding: 8px 12px;
            border: 1px solid #ddd;
            background: white;
            color: #333;
            border-radius: 5px;
            cursor: pointer;
        }

        .page-link.disabled {
            background: #eee;
            color: #aaa;
            pointer-events: none;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <div>
                <h2 style="margin:0;">Dashboard Admin</h2>
                <small>Halo, <%= user.nama %></small>
            </div>
            <div>
                <a href="/logout" class="btn-logout">Logout</a>
            </div>
        </div>

        <div class="stats-grid">
            <div class="card">
                <h3>Total Target Usaha</h3>
                <div class="number">
                    <%= stats.total %>
                </div>
            </div>
            <div class="card">
                <h3>Sudah Diverifikasi</h3>
                <div class="number" style="color: #00b894;">
                    <%= stats.verified %>
                </div>
            </div>
            <div class="card">
                <h3>Belum Diverifikasi</h3>
                <div class="number" style="color: #d63031;">
                    <%= stats.pending %>
                </div>
            </div>
            <div class="card">
                <h3>Progress</h3>
                <div class="number">
                    <%= stats.total> 0 ? Math.round((stats.verified / stats.total) * 100) : 0 %>%
                </div>
            </div>
        </div>

        <div style="margin-bottom: 20px; text-align: right;">
            <a href="/admin/export" class="btn-export">
                <span>ðŸ“Š Export Data </span>
            </a>
        </div>

        <div class="table-container">
            <div class="toolbar">
                <h3 style="margin:0;">ðŸ“Š Kinerja Petugas</h3>

                <input type="text" id="searchInput" class="search-box" placeholder="Ketik nama petugas..."
                    value="<%= pagination.search %>" oninput="debounceSearch()">
            </div>

            <table>
                <thead>
                    <tr>
                        <th width="50">No</th>
                        <th>Nama Petugas</th>
                        <th>Email</th>
                        <th>Total Verifikasi</th>
                    </tr>
                </thead>
                <tbody id="tbody-petugas">
                    <% if(leaderboard.length===0) { %>
                        <tr>
                            <td colspan="4" style="text-align:center; padding: 20px;">Tidak ada data ditemukan.</td>
                        </tr>
                        <% } %>

                            <% leaderboard.forEach((row, index)=> { %>
                                <tr>
                                    <td>
                                        <%= ((pagination.page - 1) * 10) + (index + 1) %>
                                    </td>
                                    <td><b>
                                            <%= row.petugas_nama %>
                                        </b></td>
                                    <td>
                                        <%= row.petugas_email %>
                                    </td>
                                    <td>
                                        <span
                                            style="background:#e6fffb; color:#00b894; padding:5px 10px; border-radius:15px; font-weight:bold;">
                                            <%= row.total_kerja %> Usaha
                                        </span>
                                    </td>
                                </tr>
                                <% }); %>
                </tbody>
            </table>

            <div class="pagination" id="pagination-container">
                <% if(pagination.totalPages> 1) { %>
                    <a href="/admin/dashboard?page=<%= pagination.page - 1 %>&search=<%= pagination.search %>"
                        class="page-link <%= pagination.page === 1 ? 'disabled' : '' %>">Prev</a>

                    <span class="page-info">Halaman <b>
                            <%= pagination.page %>
                        </b> dari <%= pagination.totalPages %></span>

                    <a href="/admin/dashboard?page=<%= pagination.page + 1 %>&search=<%= pagination.search %>"
                        class="page-link <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">Next</a>
                    <% } %>
            </div>
        </div>
    </div>

    <script>
        let searchTimeout = null;

        // Fungsi ini dipanggil setiap kali user mengetik
        function debounceSearch() {
            // Hapus timer sebelumnya (biar gak request setiap milidetik)
            clearTimeout(searchTimeout);

            // Tunggu 500ms setelah user BERHENTI mengetik, baru request ke server
            searchTimeout = setTimeout(() => {
                fetchData(1); // Reset ke halaman 1 saat mencari
            }, 500);
        }

        async function fetchData(page) {
            const query = document.getElementById('searchInput').value;

            // Ubah URL browser tanpa refresh (biar kalau di-refresh tetap di pencarian tsb)
            const newUrl = `/admin/dashboard?page=${page}&search=${query}`;
            window.history.pushState({ path: newUrl }, '', newUrl);

            // Request Data ke Server (AJAX)
            try {
                const res = await fetch(newUrl + '&ajax=true'); // Tambahkan flag ajax
                const data = await res.json();

                renderTable(data);
            } catch (err) {
                console.error("Gagal mengambil data:", err);
            }
        }

        function renderTable(data) {
            const tbody = document.getElementById('tbody-petugas');
            const pagiContainer = document.getElementById('pagination-container');
            const list = data.leaderboard;
            const pagi = data.pagination;

            // 1. Render Tabel
            let html = '';
            if (list.length === 0) {
                html = '<tr><td colspan="4" style="text-align:center; padding: 20px;">Tidak ada data ditemukan.</td></tr>';
            } else {
                list.forEach((row, index) => {
                    const no = ((pagi.page - 1) * 10) + (index + 1);
                    html += `
                        <tr>
                            <td>${no}</td>
                            <td><b>${row.petugas_nama}</b></td>
                            <td>${row.petugas_email}</td>
                            <td>
                                <span style="background:#e6fffb; color:#00b894; padding:5px 10px; border-radius:15px; font-weight:bold;">
                                    ${row.total_kerja} Usaha
                                </span>
                            </td>
                        </tr>
                    `;
                });
            }
            tbody.innerHTML = html;

            // 2. Render Pagination
            let pagiHtml = '';
            if (pagi.totalPages > 1) {
                // Tombol Prev
                const prevDisabled = pagi.page === 1 ? 'disabled' : '';
                // Kita pakai onclick="fetchData(...)" biar pagination juga gak refresh halaman
                pagiHtml += `<a href="javascript:void(0)" onclick="fetchData(${pagi.page - 1})" class="page-link ${prevDisabled}">Prev</a>`;

                // Info Halaman
                pagiHtml += `<span class="page-info" style="margin: 0 10px;">Halaman <b>${pagi.page}</b> dari ${pagi.totalPages}</span>`;

                // Tombol Next
                const nextDisabled = pagi.page === pagi.totalPages ? 'disabled' : '';
                pagiHtml += `<a href="javascript:void(0)" onclick="fetchData(${pagi.page + 1})" class="page-link ${nextDisabled}">Next</a>`;
            }
            pagiContainer.innerHTML = pagiHtml;
        }
    </script>
</body>

</html>